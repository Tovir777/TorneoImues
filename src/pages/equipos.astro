---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CyberCard from '../components/CyberCard.astro';
import equipos from '../data/equipos.json';
---

<Layout 
  title="Equipos Participantes - Baby Fútbol Imués 2025 | 12 Clubes de Nariño"
  description="Conoce los 12 equipos participantes del Baby Fútbol Imués 2025. Clubes de fútbol infantil de Nariño compitiendo en categoría 2013-2014 por el título del torneo."
  url="https://baby-futbol-imues2025.vercel.app/equipos"
>
  <Header />
  
  <main class="pt-24 pb-12">
    <section class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-8">
        <span class="text-neon-purple">⚽</span> Equipos Participantes
      </h1>
      
      <p class="text-xl text-center text-neon-cyan mb-12">
        12 equipos de Nariño compitiendo por el título
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {equipos.map((equipo) => (
          <CyberCard title={equipo.nombre} gradient={true} class="team-card">
            <div class="space-y-3">             
              <div class="flex items-center justify-center">
                <div class="bg-white rounded-xl shadow-lg flex items-center justify-center" style="width: 4.5cm; height: 4.5cm;">
                  <img 
                    src={equipo.logo} 
                    alt={equipo.nombre}
                    class="w-full h-full object-contain"
                    style="background: transparent;"
                  />
                </div>
              </div>              
              <div class="text-center">
                <span class="inline-block bg-neon-purple/20 text-neon-purple px-3 py-1 rounded-full text-sm">
                  Equipo #{equipo.id}
                </span>
              </div>
            </div>
          </CyberCard>
        ))}
      </div>
      
      <!-- Statistics -->
      <div class="mt-16 text-center">
        <h2 class="text-3xl font-bold text-neon-cyan mb-8">Estadísticas de Equipos</h2>
        
        <div class="grid grid-cols-2 md:grid-cols-2 gap-4 max-w-4xl mx-auto">
          <div class="bg-cyber-gray/30 rounded-lg p-6 border border-neon-purple/30">
            <div class="text-3xl font-bold text-neon-purple mb-2">12</div>
            <div class="text-sm text-gray-300">Equipos Totales</div>
          </div>
          

          
          <div class="bg-cyber-gray/30 rounded-lg p-6 border border-neon-purple/30">
            <div class="text-3xl font-bold text-neon-purple mb-2">216+</div>
            <div class="text-sm text-gray-300">Jugadores</div>
          </div>         

        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .team-card {
    @apply hover:shadow-[0_0_25px_rgba(255,0,204,0.4)];
  }
  
  .team-logo-placeholder {
    @apply py-4;
  }
</style>