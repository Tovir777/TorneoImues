---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CyberCard from '../components/CyberCard.astro';
import goleadores from '../data/goleadores.json';
import juegoLimpio from '../data/juego-limpio.json';
import resultadosFinales from '../data/resultados-finales.json';
---

<Layout 
  title="Resultados Finales - Baby F√∫tbol Imu√©s 2025 | Campe√≥n y Goleadores"
  description="Resultados finales del Baby F√∫tbol Imu√©s 2025. Campe√≥n, subcampe√≥n, tabla de goleadores, juego limpio y todos los resultados del torneo infantil."
  url="https://baby-futbol-imues2025.vercel.app/resultados"
>
  <Header />
  
  <main class="pt-24 pb-12">
    <section class="container mx-auto px-4">

        <!-- Resultados Finales -->
        <div>
          <h2 class="text-3xl font-bold text-neon-purple mb-6 mt-6 text-center">
            üèÜ Resultados Finales
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Podio -->
            <CyberCard title="ü•á Campe√≥n" gradient={true} class="podium-card champion">
              <div class="text-center space-y-2">
                <div class="w-16 h-16 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-full flex items-center justify-center mx-auto">
                  <span class="text-2xl">üèÜ</span>
                </div>
                <div class="text-xl font-bold text-white">{resultadosFinales.campeon.equipo}</div>
                <div class="text-sm text-gray-300">{resultadosFinales.campeon.ciudad}</div>
              </div>
            </CyberCard>
            
            <CyberCard title="ü•à Subcampe√≥n" gradient={true} class="podium-card">
              <div class="text-center space-y-2">
                <div class="w-16 h-16 bg-gradient-to-br from-gray-400 to-gray-600 rounded-full flex items-center justify-center mx-auto">
                  <span class="text-2xl">ü•à</span>
                </div>
                <div class="text-xl font-bold text-white">{resultadosFinales.subcampeon.equipo}</div>
                <div class="text-sm text-gray-300">{resultadosFinales.subcampeon.ciudad}</div>
              </div>
            </CyberCard>
            
            <CyberCard title="ü•â Tercer Lugar" gradient={true} class="podium-card">
              <div class="text-center space-y-2">
                <div class="w-16 h-16 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center mx-auto">
                  <span class="text-2xl">ü•â</span>
                </div>
                <div class="text-xl font-bold text-white">{resultadosFinales.tercero.equipo}</div>
                <div class="text-sm text-gray-300">{resultadosFinales.tercero.ciudad}</div>
              </div>
            </CyberCard>
          </div>
          
          <!-- Premios Individuales -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
            <CyberCard title="‚öΩ Goleador del Torneo" gradient={true}>
              <div class="text-center space-y-2">
                <div class="w-12 h-12 bg-gradient-to-br from-neon-purple to-neon-cyan rounded-full flex items-center justify-center mx-auto">
                  <span class="text-xl">‚öΩ</span>
                </div>
                <div class="text-lg font-bold text-white">{resultadosFinales.goleador.jugador}</div>
                <div class="text-sm text-gray-300">{resultadosFinales.goleador.equipo}</div>
                <div class="text-neon-purple font-bold">{resultadosFinales.goleador.goles} goles</div>
              </div>
            </CyberCard>
            
            <CyberCard title="ü•Ö Valla Menos Vencida" gradient={true}>
              <div class="text-center space-y-2">
                <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center mx-auto">
                  <span class="text-xl">ü•Ö</span>
                </div>
                <div class="text-lg font-bold text-white">{resultadosFinales.vallaMenosVencida.jugador}</div>
                <div class="text-sm text-gray-300">{resultadosFinales.vallaMenosVencida.equipo}</div>
                <div class="text-green-400 font-bold">{resultadosFinales.vallaMenosVencida.golesRecibidos} goles recibidos</div>
              </div>
            </CyberCard>
          </div>
        </div>

      <h1 class="text-4xl md:text-5xl font-bold text-center mb-8">
        <span class="text-neon-cyan">üèÜ</span> Resultados del Torneo
      </h1>
      
      <p class="text-xl text-center text-neon-purple mb-12">
        Goleadores, juego limpio y resultados finales
      </p>
      
      <div class="space-y-12">
        <!-- Tabla de Goleadores -->
        <div>
          <h2 class="text-3xl font-bold text-neon-purple mb-6 text-center">
            ‚öΩ Tabla de Goleadores
          </h2>
          
          <CyberCard title="M√°ximos Goleadores" gradient={true} class="max-w-4xl mx-auto">
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead>
                  <tr class="text-neon-cyan border-b border-neon-purple/30">
                    <th class="text-left p-3">Pos</th>
                    <th class="text-left p-3">Jugador</th>
                    <th class="text-left p-3">Equipo</th>
                    <th class="text-center p-3">Goles</th>
                  </tr>
                </thead>
                <tbody>
                  {goleadores.map((jugador, index) => (
                    <tr class={`border-b border-cyber-gray/30 ${index === 0 ? 'bg-yellow-500/10' : ''}`}>
                      <td class="p-3">
                        <span class={`inline-block w-8 h-8 rounded-full flex items-center justify-center text-sm ${
                          index === 0 ? 'bg-yellow-500 text-black' : 
                          index === 1 ? 'bg-gray-400 text-black' :
                          index === 2 ? 'bg-orange-600 text-white' :
                          'bg-cyber-gray text-gray-400'
                        }`}>
                          {jugador.posicion}
                        </span>
                      </td>
                      <td class="p-3 text-white font-medium">{jugador.jugador}</td>
                      <td class="p-3 text-gray-300">{jugador.equipo}</td>
                      <td class="p-3 text-center text-neon-purple font-bold text-lg">{jugador.goles}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </CyberCard>
        </div>
        
        <!-- Tabla de Juego Limpio -->
        <div>
          <h2 class="text-3xl font-bold text-neon-cyan mb-6 text-center">
            üèÖ Tabla de Juego Limpio
          </h2>
          
          <CyberCard title="Fair Play" gradient={true} class="max-w-4xl mx-auto">
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead>
                  <tr class="text-neon-cyan border-b border-neon-purple/30">
                    <th class="text-left p-3">Pos</th>
                    <th class="text-left p-3">Jugador</th>
                    <th class="text-left p-3">Equipo</th>
                    <th class="text-center p-3">TA</th>
                    <th class="text-center p-3">TR</th>                    
                  </tr>
                </thead>
                <tbody>
                  {juegoLimpio.map((jugador, index) => (
                    <tr class={`border-b border-cyber-gray/30 ${index === 0 ? 'border-b border-cyber-gray/30' : ''}`}>
                      <td class="p-3">
                        <span class={`inline-block w-8 h-8 rounded-full flex items-center justify-center text-sm ${
                          index === 0 ? 'bg-cyber-gray text-gray-400' : 
                          'bg-cyber-gray text-gray-400'
                        }`}>
                          {jugador.posicion}
                        </span>
                      </td>
                      <td class="p-3 text-white font-medium">{jugador.jugador}</td>
                      <td class="p-3 text-gray-300">{jugador.equipo}</td>
                      <td class="p-3 text-center text-yellow-400">{jugador.ta}</td>
                      <td class="p-3 text-center text-red-400">{jugador.tr}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
            
            <div class="mt-4 text-sm text-gray-400">
              <p>* Puntos Fair Play: Menos puntos = Mejor comportamiento</p>
              <p>* TA = 1 punto, TR = 3 puntos</p>
            </div>
          </CyberCard>
        </div>
            </div>
    </section>
  </main>
</Layout>

<style>
  .podium-card {
    @apply hover:shadow-[0_0_25px_rgba(255,0,204,0.4)];
  }
  
  .champion {
    @apply hover:shadow-[0_0_30px_rgba(255,215,0,0.5)];
  }
</style>